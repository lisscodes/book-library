{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "plugins": ["react"],
  "rules": {
    /* 🔹 Permite usar aspas duplas sem erro */
    "quotes": ["off"],

    /* 🔹 Evita erro de “Expected no linebreak before this expression” */
    "implicit-arrow-linebreak": "off",

    /* 🔹 Evita erro de quebra de linha em funções */
    "function-paren-newline": "off",

    /* 🔹 Permite declarar variáveis que ainda não estão sendo usadas (como recommendedBooks) */
    "no-unused-vars": "warn",

    /* 🔹 Mantém compatibilidade com JSX */
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],

    /* 🔹 Desativa regra antiga que exige importar React sempre */
    "react/react-in-jsx-scope": "off",

    /* 🔹 Permite imports relativos ou sem extensão */
    "import/no-unresolved": "off",

    /* 🔹 Permite sobrescrever variáveis locais em escopo */
    "no-shadow": "off",

    /* 🔹 Permite arrow functions simples em várias linhas */
    "arrow-body-style": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*Slice.js"],
      "rules": {
        "no-param-reassign": ["error", { "props": false }]
      }
    }
  ],
  "ignorePatterns": ["dist/", "build/"]
}
