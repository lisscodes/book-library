{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb", "plugin:react/recommended", "plugin:react-hooks/recommended"],
  "plugins": ["react"],
  "rules": {
    /* ğŸ”¹ Permite usar aspas duplas sem erro */
    "quotes": ["off"],

    /* ğŸ”¹ Evita erro de â€œExpected no linebreak before this expressionâ€ */
    "implicit-arrow-linebreak": "off",

    /* ğŸ”¹ Evita erro de quebra de linha em funÃ§Ãµes */
    "function-paren-newline": "off",

    /* ğŸ”¹ Permite declarar variÃ¡veis que ainda nÃ£o estÃ£o sendo usadas (como recommendedBooks) */
    "no-unused-vars": "warn",

    /* ğŸ”¹ MantÃ©m compatibilidade com JSX */
    "react/jsx-filename-extension": ["warn", { "extensions": [".js", ".jsx"] }],

    /* ğŸ”¹ Desativa regra antiga que exige importar React sempre */
    "react/react-in-jsx-scope": "off",

    /* ğŸ”¹ Permite imports relativos ou sem extensÃ£o */
    "import/no-unresolved": "off",

    /* ğŸ”¹ Permite sobrescrever variÃ¡veis locais em escopo */
    "no-shadow": "off",

    /* ğŸ”¹ Permite arrow functions simples em vÃ¡rias linhas */
    "arrow-body-style": "off"
  },
  "overrides": [
    {
      "files": ["src/**/*Slice.js"],
      "rules": {
        "no-param-reassign": ["error", { "props": false }]
      }
    }
  ],
  "ignorePatterns": ["dist/", "build/"]
}
